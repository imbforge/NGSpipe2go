cellranger_count_vars=[
    outdir          : MAPPED,
    transcriptome   : ESSENTIAL_GENOME_REFERENCE, 
    expect_cells    : ESSENTIAL_EXPECTED_CELLS,
    nuclei          : (ESSENTIAL_NUCLEI == "yes"),
    cores           : "8",
    localmem        : "64",
    extra           : " "      // extra parms to sent to the tool, e.g. --chemistry if not detected automatically
]

load PIPELINE_ROOT + "/modules/scRNAseq/cellranger_count.groovy"

// expected parameter types
class cellranger_count_vars_schema {
    String outdir             
    String transcriptome           
    Integer expect_cells           
    Boolean nuclei           
    String cores
    String localmem      
    String extra              

    // check for the presence of mandatory params
    boolean asBoolean() {
      outdir && transcriptome
    }
}

validate_schema(cellranger_count_vars_schema, cellranger_count_vars)
