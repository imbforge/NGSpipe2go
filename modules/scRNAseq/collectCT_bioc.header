load PIPELINE_ROOT + "/modules/scRNAseq/collectCT_bioc.groovy"

// expected parameter types
class collectCT_bioc_vars_schema {
    String pipeline_root           
    String seqtype           
    String res             
    String ctanno_dir             
    String selected_CTanno             
    String exprPlotDir             
    String selected_genes             
    String annocat_plot              
    String annocat_plot2              
    String plot_pointsize              
    String plot_pointalpha              

    // check for the presence of mandatory params
    boolean asBoolean() {
      ctanno_dir && selected_CTanno
    }
}

validate_schema(collectCT_bioc_vars_schema, collectCT_bioc_vars)
